/* pages/collect/collect.wxss */
text{
    font-size: 12px;
}
.noCollect {
    width: 200px;
    height: 130px;
    margin: 200px auto;
    text-align: center
}
.goTo{
    margin:20px auto;
    background: #015614;
    color:#fff;
    text-align: center;
    border-radius: 20px;
    line-height: 20px;
    width: 70px;
    height:20px;
}
.con{
    display: flex;
    text-align: center;
    box-sizing: border-box;
    font-size:10px;
    align-items: center;
    flex-direction: row; 
    flex-wrap: wrap;
}
.card{
    margin: 20rpx 0; 
    width:45%;
    border-radius: 20rpx;
    box-shadow: 1px 0 1px  #ccc;
}
.text{
    clear: both;
    margin-left:12px;
    margin-top: 10px;
    font-size:12px;
}
.card image{
    width:300rpx;
    height: 200rpx;
}
.footer{
    position: relative;
}
.choose{
    position: absolute;
    width:40rpx;
    height: 40rpx;
     right:20rpx;
    bottom: 5rpx;
}
.footer image{
    width:40rpx;
    height: 40rpx;
   
}